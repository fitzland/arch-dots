DIR="$HOME/.config/i3"
I3="$HOME/.config/i3/themes"
rofi_command="rofi -theme $DIR/rofi/themes/themes.rasi"

# Themes
theme_1=" Beach"
theme_2=" Blade"
theme_3=" Bouquet"
theme_4=" Cyberpunk"
theme_5=" Dracula"
theme_6=" Flowers"
theme_7=" Forest"
theme_8=" Groot"
theme_9=" Gruvbox"
theme_10=" Hack"
theme_11=" Keyboards"
theme_12=" Light"
theme_13=" Manhattan"
theme_14=" Nord"
theme_15=" Nordic"
theme_16=" Pastel"
theme_17=" Rick"
theme_18=" Spark"
theme_19=" Tealize"
theme_20=" Wave"

# Variable passed to rofi
options="$theme_1\n$theme_2\n$theme_3\n$theme_4\n$theme_5\
\n$theme_6\n$theme_7\n$theme_8\n$theme_9\n$theme_10\
\n$theme_11\n$theme_12\n$theme_13\n$theme_14\n$theme_15\
\n$theme_16\n$theme_17\n$theme_18\n$theme_19\n$theme_20"

chosen="$(echo -e "$options" | $rofi_command -p "Available themes : (20)" -dmenu -selected-row 0)"
case $chosen in
    $theme_1)
        bash ${I3}/set-theme  'beach.jpg' 'beach' 'Arc-Lighter' 'Arc-Circle' 'Fluent'
        ;;
    $theme_2)
        bash ${I3}/set-theme  'blade.jpg' 'blade' 'Blade' 'Nordic-Folders' 'LyraS'
        ;;
    $theme_3)
        bash ${I3}/set-theme  'bouquet.jpg' 'bouquet' 'Juno-mirage' 'Luna-Dark' 'Future-dark'
        ;;
    $theme_4)
        bash ${I3}/set-theme  'cyberpunk.jpg' 'cyberpunk' 'Cyberpunk' 'Archcraft-Dark' 'LyraB'
        ;;
    $theme_5)
        bash ${I3}/set-theme  'dracula.png' 'dracula' 'Dracula' 'Nordic-Folders' 'Sweet'
        ;;
    $theme_6)
        bash ${I3}/set-theme  'flowers.jpg' 'flowers' 'Kripton' 'Zafiro' 'Fluent-dark'
        ;;
    $theme_7)
        bash ${I3}/set-theme  'forest.jpg' 'forest' 'Adapta-Nokto' 'Luv-Folders-Dark' 'Vimix'
        ;;
    $theme_8)
        bash ${I3}/set-theme  'groot.jpg' 'groot' 'Groot' 'Luna-Dark' 'Pear'
        ;;
    $theme_9)
        bash ${I3}/set-theme  'gruvbox.jpg' 'gruvbox' 'Gruvbox' 'Luna-Dark' 'Future-dark'
        ;;
    $theme_10)
        bash ${I3}/set-theme  'hack.jpg' 'hack' 'Hack' 'Hack' 'LyraB'
        ;;
    $theme_11)
        bash ${I3}/set-theme  'keyboards.jpg' 'keyboards' 'Sweet-Dark' 'Zafiro-Purple' 'Sweet'
        ;;
    $theme_12)
        bash ${I3}/set-theme  'light.jpg' 'light' 'White' 'Arc-Circle' 'Fluent-dark'
        ;;
    $theme_13)
        bash ${I3}/set-theme  'manhattan.jpg' 'manhattan' 'Manhattan' 'Luv-Folders-Dark' 'Vimix-dark'
        ;;
    $theme_14)
        bash ${I3}/set-theme  'nord.jpg' 'nord' 'Arc-Dark' 'Arc-Circle' 'Qogirr'
        ;;
    $theme_15)
        bash ${I3}/set-theme  'nordic.jpg' 'nord' 'Nordic' 'Nordic-Folders' 'Qogirr-dark'
        ;;
    $theme_16)
        bash ${I3}/set-theme  'pastel.png' 'pastel' 'White' 'Qogir' 'Qogirr-dark'
        ;;
    $theme_17)
        bash ${I3}/set-theme  'rick.jpg' 'rick' 'Rick' 'Zafiro' 'Vimix-dark'
        ;;
    $theme_18)
        bash ${I3}/set-theme  'spark.jpg' 'spark' 'Spark' 'Luv-Folders' 'Vimix'
        ;;
    $theme_19)
        bash ${I3}/set-theme  'tealize.png' 'tealize' 'Juno-palenight' 'Luv-Folders-Dark' 'Vimix'
        ;;
    $theme_20)
        bash ${I3}/set-theme  'wave.jpg' 'wave' 'Wave' 'Luv-Folders-Dark' 'Vimix'
        ;;
esac
