# Apply gtk theming
exec_always ~/.config/sway/scripts/import-gsettings

# Set inner/outer gaps
gaps inner 3
gaps outer 0

# Hide titlebar on windows:
default_border pixel 2

# Default Font
font pango:Noto Sans Regular 10

# Thin borders:
smart_borders on

# Set wallpaper:
# exec swaybg -i ~/.config/sway/sway.png

# Title format for windows
for_window [shell="xdg_shell"] title_format "%title (%app_id)"
for_window [shell="x_wayland"] title_format "%class - %title"

# Define colors variables:
set $background #2E3440
set $foreground #D8DEE9
set $cursorColor #D8DEE9

set $black #3B4252
set $red #BF616A
set $green #A3BE8C
set $yellow #EBCB8B
set $blue #81A1C1
set $magenta #B48EAD
set $cyan #88C0D0
set $white #E5E9F0
set $altblack #4C566A
set $altred #BF616A
set $altgreen #A3BE8C
set $altyellow #EBCB8B
set $altblue #81A1C1
set $altmagenta #B48EAD
set $altcyan #8FBCBB
set $altwhite #ECEFF4

# class                   border        background      text            indicator       child_border
client.focused            $green        $green          $background     $yellow         $cyan
client.focused_inactive   $magenta      $magenta        $background     $yellow         $cyan
client.unfocused          $blue         $blue           $background     $yellow         $cyan
client.urgent             $red          $red            $background     $yellow         $cyan
client.placeholder        $black        $black          $foreground     $yellow         $cyan

client.background         $background

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    swaybar_command waybar
}
