############################################
# bar settings (input comes from i3blocks) #
############################################

# Start i3bar to display a workspace bar
# (plus the system information i3status finds out, if available)
bar {
		#font pango: Roboto Regular 11
		status_command i3blocks -c ~/.config/i3/i3blocks.conf
        output DP-2
	    position bottom
#	    i3bar_command i3bar --transparency
# it could be that you have no primary display set: set one (xrandr --output <output> --primary)
# reference: https://i3wm.org/docs/userguide.html#_tray_output
		tray_output primary
		tray_padding 2

# When strip_workspace_numbers is set to yes,
# any workspace that has a name of the form
# “[n][:][NAME]” will display only the name.
##strip_workspace_numbers yes
##strip_workspace_name no

		    colors {
		    separator          $magenta
		    background         $background
		    statusline         $foreground
#                          	border 			bg			txt				indicator
		focused_workspace	$green	   		$green		$background		$magenta
		active_workspace	$magenta      	$magenta	$background		$magenta
		inactive_workspace	$blue   		$blue		$background		$magenta
		urgent_workspace	$red	    	$red		$background		$magenta
	}
}

# you can add different bars for multidisplay setups on each display:
# set output HDMI-0 to the display you want the bar, --transparency can be set.
# Transparency needs rgba color codes to be used where the last two letters are the transparency factor see here:
# https://gist.github.com/lopspower/03fb1cc0ac9f32ef38f4
# #08052be6 --> e6=90%

bar {
	#font pango: Roboto Regular 11
	status_command i3blocks -c ~/.config/i3/i3blocks-secondary.conf
#	i3bar_command i3bar --transparency
	output DP-4
	position bottom
#
# When strip_workspace_numbers is set to yes,
# any workspace that has a name of the form
# “[n][:][NAME]” will display only the name.
##strip_workspace_numbers yes
##strip_workspace_name no
#
		    colors {
		    separator          $magenta
		    background         $background
		    statusline         $foreground
#                          	border 			bg			txt				indicator
		focused_workspace	$green	   		$green		$background		$magenta
		active_workspace	$magenta      	$magenta	$background		$magenta
		inactive_workspace	$blue   		$blue		$background		$magenta
		urgent_workspace	$red	    	$red		$background		$magenta
	}
}

