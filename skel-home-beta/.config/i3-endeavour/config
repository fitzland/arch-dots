## Navigate // Next Workspace // <> o ##
set_from_resource $i3-wm.binding.ws_next i3-wm.binding.ws_next o
bindsym $mod+$i3-wm.binding.ws_next workspace next

## Navigate // move focsed container workspace next // <> <Shift> o ##
set_from_resource $i3-wm.binding.ws_next_move i3-wm.binding.ws_next_move Shift+o
bindsym $mod+$i3-wm.binding.ws_next_move move container to workspace next; workspace next

## Navigate // Next Workspace // <> <Alt> → ##
set_from_resource $i3-wm.binding.ws_next2 i3-wm.binding.ws_next2 Right
bindsym $mod+$alt+$i3-wm.binding.ws_next2 workspace next

## Navigate // move focused container workspace next // <> <Ctrl> → ##
set_from_resource $i3-wm.binding.ws_next_move2 i3-wm.binding.ws_next_move2 Ctrl+Right
bindsym $mod+$i3-wm.binding.ws_next_move2 move container to workspace next; workspace next

## Navigate // Previous Workspace // <> i ##
set_from_resource $i3-wm.binding.ws_prev i3-wm.binding.ws_prev i
bindsym $mod+$i3-wm.binding.ws_prev workspace prev

## Navigate // move focused container workspace prev // <> <Shift> i ##
set_from_resource $i3-wm.binding.ws_prev_move i3-wm.binding.ws_prev_move Shift+i
bindsym $mod+$i3-wm.binding.ws_prev_move move container to workspace prev; workspace prev

## Navigate // Previous Workspace // <><Alt> ← ##
set_from_resource $i3-wm.binding.ws_prev2 i3-wm.binding.ws_prev2 Left
bindsym $mod+$alt+$i3-wm.binding.ws_prev2 workspace prev

## Navigate // move focused container workspace prev // <> <Ctrl> ← ##
set_from_resource $i3-wm.binding.ws_prev_move2 i3-wm.binding.ws_prev_move2 Ctrl+Left
bindsym $mod+$i3-wm.binding.ws_prev_move2 move container to workspace next; workspace next

## Navigate // move container output next // <> comma ##
set_from_resource $i3-wm.binding.ws_output_next i3-wm.binding.ws_output_next comma
bindsym $mod+$i3-wm.binding.ws_output_next move container to output next

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

## Navigate // Scratchpad // <> minus ##
set_from_resource $i3-wm.binding.scratchpad i3-wm.binding.scratchpad minus
bindsym $mod+$i3-wm.binding.scratchpad scratchpad show

## Navigate // Urgent Workspace // <> u ##
set_from_resource $i3-wm.binding.urgent_workspace i3-wm.binding.urgent_workspace u
bindsym $mod+$i3-wm.binding.urgent_workspace [urgent=latest] focus


