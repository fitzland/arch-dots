bindsym XF86MonBrightnessDown 	exec --no-startup-id "~/.config/i3/bin/i3brightness.sh --dec"
bindsym XF86AudioRaiseVolume 	exec --no-startup-id "~/.config/i3/bin/i3volume.sh --inc"
bindsym XF86AudioLowerVolume 	exec --no-startup-id "~/.config/i3/bin/i3volume.sh --dec"
bindsym XF86AudioMute 			exec --no-startup-id "~/.config/i3/bin/i3volume.sh --toggle"
bindsym XF86AudioMicMute 		exec --no-startup-id "~/.config/i3/bin/i3volume.sh --toggle-mic"
bindsym XF86AudioNext 			exec --no-startup-id "mpc next"
bindsym XF86AudioPrev 			exec --no-startup-id "mpc prev"
bindsym XF86AudioPlay 			exec --no-startup-id "mpc toggle"
bindsym XF86AudioStop 			exec --no-startup-id "mpc stop"

# -- Screenshots --
bindsym Print 					exec --no-startup-id "~/.config/i3/bin/i3screenshot.sh --now"
bindsym $mod+Print 				exec --no-startup-id "~/.config/i3/bin/i3screenshot.sh --in5"
bindsym Shift+Print 			exec --no-startup-id "~/.config/i3/bin/i3screenshot.sh --in10"
bindsym Control+Print 			exec --no-startup-id "~/.config/i3/bin/i3screenshot.sh --win"
bindsym $mod+Control+Print 		exec --no-startup-id "~/.config/i3/bin/i3screenshot.sh --area"

# -- i3wm --

# Lockscreen
bindsym $alt+Control+k 			exec --no-startup-id "betterlockscreen --lock"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+q kill
bindsym $mod+c kill

