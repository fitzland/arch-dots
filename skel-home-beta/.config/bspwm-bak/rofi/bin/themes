DIR="$HOME/.config/bspwm"
BSP="$HOME/.config/bspwm/themes"
rofi_command="rofi -theme $DIR/rofi/themes/themes.rasi"

# Themes
theme_adapta=" Adapta"
theme_cubic=" Cubic"
theme_dracula=" Dracula"
theme_forest=" Forest"
theme_otis=" Otis"
theme_nordic=" Nordic"
theme_sweet=" Sweet"

# Variable passed to rofi
options="$theme_cubic\n$theme_dracula\n$theme_forest\n$theme_otis\n$theme_nordic\n$theme_sweet"

chosen="$(echo -e "$options" | $rofi_command -p "Available themes: " -dmenu -selected-row 0)"
case $chosen in
    $theme_adapta)
        set_style  'adapta' 'Matcha-dark-sea' 'Qogir-manjaro-dark' 'Qogir-manjaro-dark'
        ;;
    $theme_cubic)
        bash ${BSP}/set-theme  'cubic.jpg' 'cubic' 'Hash' 'Paper' 'Adwaita'
        ;;
    $theme_dracula)
        bash ${BSP}/set-theme  'dracula.png' 'dracula' 'Dracula' 'Dracula' 'Qogir-ubuntu-dark'
        ;;
    $theme_forest)
        bash ${BSP}/set-theme  'forest.jpg' 'forest' 'Matcha-dark-sea' 'Qogir-manjaro-dark' 'Qogir-manjaro-dark'
        ;;
    $theme_otis)
        bash ${BSP}/set-theme  'otis.png' 'otis' 'Otis' 'Qogir-manjaro-dark' 'Qogir-manjaro-dark'
        ;;
    $theme_nordic)
        bash ${BSP}/set-theme  'nord.png' 'nord' 'Nordic' 'Papirus-Dark' 'Qogir'
        ;;
    $theme_sweet)
        bash ${BSP}/set-theme  'hack.png' 'sweet' 'Sweet-Dark' 'Candy' 'Sweet-cursors'
        ;;
esac
