DIR="$HOME/.config/bspwm"
BSP="$HOME/.config/bspwm/themes"
rofi_command="rofi -theme $DIR/rofi/themes/themes.rasi"

# Themes
theme_adaptive=" Adaptive"
#theme_beach=" Beach"
#theme_blade=" Blade"
theme_bouquet=" Bouquet"
theme_cubic=" Cubic"
#theme_cyberpunk=" Cyberpunk"
theme_dracula=" Dracula"
#theme_flowers=" Flowers"
theme_forest=" Forest"
#theme_groot=" Groot"
#theme_gruvbox=" Gruvbox"
#theme_hack=" Hack"
theme_juno=" Juno"
#theme_keyboards=" Keyboards"
#theme_light=" Light"
#theme_manhattan=" Manhattan"
#theme_nord=" Nord"
theme_nordic=" Nordic"
#theme_pastel=" Pastel"
#theme_rick=" Rick"
#theme_spark=" Spark"
theme_sweet=" Sweet"
#theme_tealize=" Tealize"
theme_wave=" Wave"

# Variable passed to rofi
options="$theme_adaptive\n$theme_bouquet\n$theme_cubic\
\n$theme_dracula\n$theme_forest\n$theme_juno\
\n$theme_nordic\
\n$theme_sweet\n$theme_wave"

chosen="$(echo -e "$options" | $rofi_command -p "Available themes: " -dmenu -selected-row 0)"
case $chosen in
    $theme_adaptive)
        bash ${BSP}/set-theme  'adaptive.png' 'forest' 'Adapta-Nokto' 'Zafiro-Purple' 'Qogir-manjaro'
        ;;
    $theme_beach)
        bash ${BSP}/set-theme  'beach-alt.png' 'beach' 'Groot' 'Zafiro-Blue' 'Paper'
        ;;
    $theme_blade)
        bash ${BSP}/set-theme  'blade.jpg' 'blade' 'Blade' 'Nordic-Folders' 'LyraS'
        ;;
    $theme_bouquet)
        bash ${BSP}/set-theme  'bouquet.jpg' 'bouquet' 'Sweet-Dark' 'Zafiro-Yellow' 'Paper'
        ;;
    $theme_cubic)
        bash ${BSP}/set-theme  'cubic.jpg' 'cubic' 'Hash' 'Nordic-Folders' 'Adwaita'
        ;;
    $theme_dracula)
        bash ${BSP}/set-theme  'dracula.png' 'dracula' 'Dracula' 'Qogir-ubuntu-dark' 'Qogir-ubuntu-dark'
        ;;
    $theme_flowers)
        bash ${BSP}/set-theme  'flowers.jpg' 'flowers' 'Kripton' 'Zafiro' 'Paper'
        ;;
    $theme_forest)
        bash ${BSP}/set-theme  'forest.jpg' 'forest' 'Adapta-Nokto' 'Zafiro-Green' 'Qogir-manjaro-dark'
        ;;
    $theme_groot)
        bash ${BSP}/set-theme  'groot.png' 'groot' 'Groot' 'Zafiro-Yellow' 'Adwaita'
        ;;
    $theme_gruvbox)
        bash ${BSP}/set-theme  'gruvbox.jpg' 'gruvbox' 'Gruvbox' 'Zafiro' 'LyraF'
        ;;
    $theme_hack)
        bash ${BSP}/set-theme  'hack.png' 'hack' 'Sweet-Dark' 'Qogir-manjaro-dark' 'Sweet'
        ;;
    $theme_juno)
        bash ${BSP}/set-theme  'hack.png' 'juno' 'Juno' 'Qogir-ubuntu-dark' 'Sweet'
        ;;
    $theme_nordic)
        bash ${BSP}/set-theme  'nord.png' 'nord' 'Nordic' 'Nordic-Folders' 'Qogirr-dark'
        ;;
    $theme_sweet)
        bash ${BSP}/set-theme  'hack.png' 'sweet' 'Sweet-Dark' 'Qogir-manjaro' 'Sweet'
        ;;
    $theme_wave)
        bash ${BSP}/set-theme  'wave.png' 'wave' 'Otis' 'Qogir-manjaro-dark' 'Qogir-manjaro-dark'
        ;;
esac
