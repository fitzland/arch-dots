##---------- Keybindings for apps ----------##

# Search
super + F1
	catfish

# Editor
super + {_,shift} + F2
	{atom,code}

# Inkscape
super + F3
    inkscape

# Gimp
super + F4
    gimp

# Meld
super + F5
    meld

# GnuCash
super + F6
    gnucash

# KeePassXC
super + {_,shift} + F7
    keepassxc {~/Dropbox/journal/home.kdbx,keepassxc ~/Dropbox/journal/work.kdbx}

# File Manager
super + {_,shift} + F8
    {thunar,alacritty --config-file ~/.config/bspwm/alacritty/alacritty.yml -e ranger}

# Typora
super + {_,shift} + F9
    {ghostwriter,typora}

# Firefox
super + {_,shift} + F10
    {firefox-developer-edition,firefox-developer-edition --private-window}

#Microsoft Edge
super + {_,shift} + F11
    {microsoft-edge-stable --profile-directory='Default',microsoft-edge-stable --profile-directory='Profile 1'}

#Chrome Primary
super + {_,shift} + F12
    {google-chrome-stable --profile-directory='Default',google-chrome-stable --profile-directory='Profile 1'}

##---------- Rofi Launcher & Menus ----------##

# Rofi App CMD Launcher
super + {slash,backslash}
	sh ~/.config/i3/rofi/bin/{launcher-app,launcher-cmd}

# Rofi Window Menu
super + shift + backslash
	sh ~/.config/i3/rofi/bin/windows

# Rofi Themes Menu (currently not working)
ctrl + alt + t
	sh ~/.config/i3/rofi/bin/themes

# Rofi Menus/Applets
super + {m,x,s}
	sh ~/.config/i3/rofi/bin/{mpd,powermenu,screenshot}

##---------- EOF ----------##
