##---------- Keybindings for apps ----------##

# Code
super + F2
	atom

# Atom
super + shift + F2
	code

#Inkscape
super + F3
    inkscape

#Gimp
super + F4
    gimp

#Meld
super + F5
    meld

#GnuCash
super + F6
    gnucash

#KeePassXC
super + F7
    keepassxc

#Spotify
super + F8
    thunar

#Typora
super + F9
    typora

#Firefox
super + F10
    firefox

#Firefox
super + shift + F10
    firefox --private-window

#Microsoft Edge
super + F11
    microsoft-edge-stable --profile-directory='Default'

#Microsoft Edge
super + shift + F11
    microsoft-edge-stable --profile-directory='Profile 1'

#Chrome Primary
super + F12
    google-chrome-stable --profile-directory='Default'

#Chrome Secondary
super + shift F12
    google-chrome-stable --profile-directory='Profile 1'

##---------- Keybindings for bspwm ----------##

# Terminal (alacritty)
super + Return
	rofi-sensible-terminal

# File Manager
super + shift + Return
	thunar

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
super + slash
	sh ~/.config/rofi/bin/launcher

# Rofi Term Launcher
super + backslash
	sh ~/.config/rofi/bin/launcher-term

# Rofi Network Menu
super + n
	nmd

# Rofi Themes Menu
ctrl + alt + t
	sh ~/.config/rofi/bin/themes

# Rofi Menus/Applets
super + {w,m,x,r,s,i}
	sh ~/.config/rofi/bin/{windows,mpd,powermenu-archcraft,asroot,screenshot,network}

##---------- EOF ----------##
