#################################################################
# KEYBOARD BINDINGS FOR ANY TWM
#################################################################

#################################################################
# SUPER + FUNCTION KEYS
#################################################################

# Search
super + F1
	catfish

# Editor
super + {_,shift} + F2
	{code,alacritty --config-file ~/.config/bspwm/alacritty/alacritty.yml -e nano}

# Graphics
super + {_,shift} + F3
    {writer,calc}

# Gimp
super + {_,shift} + F4
    {inkscape,gimp}

# Meld
super + {_,shift} + F5
    {spotify,meld}

# GnuCash
super + F6
    gnucash

# KeePassXC
super + {_,shift} + F7
    keepassxc {$HOME/Dropbox/journal/home.kdbx,keepassxc $HOME/Dropbox/journal/work.kdbx}

# File Manager
super + {_,shift} + F8
    {thunar,alacritty --config-file ~/.config/bspwm/alacritty/alacritty.yml -e ranger}

# Markdown Editor
super + {_,shift} + F9
    {ghostwriter,typora}

# Firefox
super + {_,shift} + F10
    {firefox-developer-edition,firefox-developer-edition --private-window}

#Microsoft Edge
super + {_,shift} + F11
    {microsoft-edge-stable --profile-directory='Default',microsoft-edge-stable --profile-directory='Profile 1'}

#Chrome Primary
super + {_,shift} + F12
    {google-chrome-stable --profile-directory='Default',google-chrome-stable --profile-directory='Profile 1'}

##########################################
##---------- Launcher & Menus ----------##
##########################################

# Rofi App Launcher
super + {_,shift} + slash
	{sh ~/.config/bspwm/rofi/bin/{launcher-app,asroot}

# Rofi Term Launcher
super + {_,shift} + backslash
	sh ~/.config/bspwm/rofi/bin/{launcher-cmd,windows}

# Terminal (alacritty)
super + {_,shift} + Return
	{alacritty,thunar}

#################################################################
# SUPER + ... KEYS
#################################################################

#Conky-toggle
super + c
    conky-toggle

#archlinux-logout
super + x
    archlinux-logout

#Rofi theme selector
super + r
    rofi-theme-selector

#Pavucontrol
super + v
    pavucontrol

#Xkill
super + Escape
    xkill


#################################################################
# SUPER + SHIFT KEYS
#################################################################

#dmenu
super + shift + d
	dmenu_run -i -nb '#191919' -nf '#fea63c' -sb '#fea63c' -sf '#191919' -fn 'NotoMonoRegular:bold:pixelsize=14'


